<%include ./partials/header.js%>

<div class="container">
    <form class="form-group col-sm-6" action="/campground/<%= campground._id%>?_method=PUT"  method="POST">
        <label for="title">Title: </label>
        <input type="text" class="form-control" id="title" name=campground[name] value="<%= campground.name %>" required>
        <label for="price">Price: </label>
        <input type="number" class="form-control" id="price" name=campground[price] value="<%= campground.price %>" min="0.01" step="0.01" required>
        <label for="image">Image URL: </label>
        <input type="text" class="form-control" id="image" name=campground[image] value="<%= campground.image %>" required>
        <label for="location">Location: </label>
        <input type="text" class="form-control" id="location" name=location value="<%= campground.location %>" required>
        <label for="description">Description: </label>
        <input type="text" class="form-control" id="description" name=campground[description] value="<%= campground.description%>" required>
        <button id="editForm" class="btn btn-lg btn-primary" >Submit</button>
    </form>
</div>


<%include ./partials/footer.js%>