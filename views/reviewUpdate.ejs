<%include  ./partials/header.js%>

<form action="/campground/<%=campground.id%>/review/<%=review.id%>/?_method=PUT" method="POST">
    <div class="container">
        <div class="form-group">
            <label for="rating">Rating</label>
            <input type="number" class="form-control" id="rating" name=review[rating] value="<%=review.rating%>" required>
        </div>
        <div class="form-group">
            <label for="review">Review</label>
            <input type="text" class="form-control" id="review" name=review[text] value="<%=review.text%>" required>
        </div>
        <button type="submit" id="userbtn" class="btn btn-primary">Submit</button>
    </div>
</form>

<%include  ./partials/footer.js%>