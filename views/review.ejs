<%include  ./partials/header.js%>

<form action="/campground/<%=campground.id%>/review" method="POST">
    <div class="container">
        <div class="form-group">
            <label for="rating">Rating</label>
            <input type="number" class="form-control" id="rating" placeholder="Rating (1 - 5)" name="rat[rating]" required>
        </div>
        <div class="form-group">
            <label for="review">Review</label>
            <input type="text" class="form-control" id="review" placeholder="Review..." name="rat[text]" required>
        </div>
        <button type="submit" id="userbtn" class="btn btn-primary">Submit</button>
    </div>
</form>

